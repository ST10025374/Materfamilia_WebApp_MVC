@model IEnumerable<SampleApp.Models.MediaContent>

@{
    ViewData["Title"] = "Gallery";
}

<h1>Gallery</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add to gallery</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@item.Url" alt="@item.Description" class="card-img-top" style="height: 200px; object-fit: cover;" />
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Type)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    <a asp-action="Details" asp-route-id="@item.MediaId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.MediaId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.MediaId" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
