@model IEnumerable<SampleApp.Models.MediaContent>
<h2>Media Management</h2>
<a asp-action="Create" class="btn btn-primary">Add New Media</a>
<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Type</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Description</td>
                <td>@item.Type</td>
                <td>
                    @if (item.ImageData != null)
                    {
                        <img src="data:image;base64,@Convert.ToBase64String(item.ImageData)" alt="Media Image" width="100" />
                    }
                    else
                    {
                        <p>No image available</p>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MediaId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.MediaId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
