@model SampleApp.Models.MediaContent

<h2>Delete Media Content</h2>

<p>Are you sure you want to delete this item?</p>
<div>
    <h4>@Model.Description</h4>
    @if (Model.ImageData != null)
    {
        // Convert ImageData to a base64 string to display it as an image
        var base64Image = Convert.ToBase64String(Model.ImageData);
        var imageSrc = $"data:image/jpeg;base64,{base64Image}";
        <img src="@imageSrc" alt="Media Image" width="150" />
    }
    else
    {
        <p>No image available</p>
    }
</div>
<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="MediaId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
