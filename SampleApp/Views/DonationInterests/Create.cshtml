@model SampleApp.Models.DonationInterest

@{
    ViewData["Title"] = "Create Donation Interest";
}

<h1>Create Donation Interest</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AmountPledged" class="control-label">Amount Pledged</label>
                <input asp-for="AmountPledged" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="AmountPledged" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateSubmitted" class="control-label">Date Submitted</label>
                <input asp-for="DateSubmitted" class="form-control" type="date" />
                <span asp-validation-for="DateSubmitted" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit Donation" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}