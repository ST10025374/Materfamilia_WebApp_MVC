@page
@model LoginModel

@{
    ViewData["Title"] = "Login Page";
}

<!-- Local Bootstrap CSS Reference -->
<link href="~/css/bootstrap.css" rel="stylesheet">

<div class="container mt-3 mb-5">
    <!-- Added margin-bottom for more space -->
    <div class="row justify-content-center">
        <div class="col-md-5">
            <h1 class="text-center mb-4">@ViewData["Title"]</h1>
            <div class="card shadow-sm">
                <div class="card-body">
                    <form id="account" method="post">
                        <h5 class="text-center mb-3">Login using your credentials</h5>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center" role="alert"></div>

                        <!-- Email Input -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password Input -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Remember Me Checkbox -->
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                        </div>

                        <!-- Login Button -->
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>

                        <!-- Additional Links -->
                        <div class="mt-4 text-center">
                            <!-- Increased top margin for links -->
                            <p><a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></p>
                            <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                            <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
